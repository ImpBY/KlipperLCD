# Service environment for KlipperLCD
# These variables are consumed by the application at startup.

# UART serial device for LCD panel
KLIPPERLCD_LCD_PORT=/dev/ttyAMA0
KLIPPERLCD_LCD_BAUDRATE=115200

# Klippy socket path
KLIPPERLCD_KLIPPY_SOCK=/home/pi/printer_data/comms/klippy.sock

# Moonraker URL/API placeholders
KLIPPERLCD_MOONRAKER_URL=127.0.0.1
KLIPPERLCD_API_KEY=XXXXXX

# LCD refresh/update interval (seconds)
KLIPPERLCD_UPDATE_INTERVAL=2

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
KLIPPERLCD_LOG_LEVEL=INFO
